# cross-platform build step
ARG GO_VERSION=1.21.1
FROM golang:${GO_VERSION} AS build-stage
WORKDIR C:/Users/ContainerUser
COPY go.mod ./
RUN go mod download
RUN go mod verify
COPY . .
RUN CGO_ENABLED=0 GOOS=windows GOARCH=amd64 go build -o server.exe cmd/server.go
# package step windows amd64 - LTSC2019
FROM mcr.microsoft.com/windows/nanoserver:ltsc2022
COPY --from=build-stage C:/Users/ContainerUser/server.exe /server.exe
USER ContainerUser
ENTRYPOINT ["/server.exe"]